<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="archityadav.passwordgenerator.WebsiteAndUsernameInputActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the website: "
        android:id="@+id/websiteTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="www."
        android:id="@+id/textView"
        android:layout_marginTop="39dp"
        android:textSize="20dp"
        android:layout_below="@+id/websiteTextView"
        android:layout_toStartOf="@+id/websiteEditText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=".com"
        android:id="@+id/textView2"
        android:textSize="20dp"
        android:layout_alignTop="@+id/textView"
        android:layout_toEndOf="@+id/websiteEditText" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/websiteEditText"
        android:layout_alignBottom="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/button"
        android:onClick="gotoNextActivity"
        android:backgroundTint="@color/colorAccent2"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your username: "

        android:id="@+id/usernameTextView"
        android:textSize="20dp"
        android:layout_marginTop="92dp"
        android:layout_below="@+id/websiteEditText"
        android:layout_alignStart="@+id/usernameEditText" />


    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/usernameEditText"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/usernameTextView"
        android:layout_alignStart="@+id/websiteEditText" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_marginTop="48dp"
        android:src="@drawable/linelight"
        android:layout_below="@+id/websiteEditText"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/linelight"
        android:layout_below="@+id/usernameEditText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp" />


</RelativeLayout>
